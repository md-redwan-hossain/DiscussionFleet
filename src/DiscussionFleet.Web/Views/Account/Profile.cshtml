@using Humanizer
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}


<div class="page-body">
<div class="container">
    <div class="card">
        <div class="row g-0">
            <div class="col d-flex flex-column">
                <div class="card-body">
                    <h2 class="mb-4">My Account</h2>

                    <form>
                        <div class="row mb-3">
                            <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                            <div class="col-md-8 col-lg-9">
                                <img src="./static/avatars/000m.jpg" alt="Profile">
                                <div class="pt-2">

                                    <label for="file-upload" class="btn btn-primary">
                                        Upload File
                                    </label>
                                    <input id="file-upload" type="file" style="display: none;">

                                    <a href="#" class="btn btn-danger">Danger</a>
                                </div>
                            </div>
                        </div>


                        @foreach (var property in Model.GetType().GetProperties())
                        {
                            if (property.Name is "FullName" or "ProfileImageId" or "Bio")
                            {
                                continue;
                            }

                            <div class="row mb-3">
                                <div class="datagrid-title">@property.Name.Humanize(LetterCasing.Sentence)</div>
                                @{
                                    var reflectedValue = property.GetValue(Model) ?? ProfileViewModel.EmptyValue;
                                }

                                @if (reflectedValue.ToString() == ProfileViewModel.EmptyValue)
                                {
                                    <div class="datagrid-content text-muted fs-4">@reflectedValue</div>
                                }
                                else
                                {
                                    <div class="datagrid-content">@reflectedValue</div>
                                }

                            </div>
                        }


                        <div class="row mb-3">
                            <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="fullName" type="text" class="form-control" id="fullName" value="Kevin Anderson">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="about" class="col-md-4 col-lg-3 col-form-label">About</label>
                            <div class="col-md-8 col-lg-9">
                                <textarea name="about" class="form-control" id="about"
                          style="height: 100px">Sunt est soluta temporibus accusantium neque nam maiores cumque temporibus. Tempora libero non est unde veniam est qui dolor. Ut sunt iure rerum quae quisquam autem eveniet perspiciatis odit. Fuga sequi sed ea saepe at unde.</textarea>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

