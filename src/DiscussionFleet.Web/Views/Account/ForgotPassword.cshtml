@model ForgotPasswordViewModel;

<div class="container container-tight py-4">
    <form asp-controller="Account" asp-action="ForgotPassword" asp-antiforgery="true" class="card card-md" autocomplete="off">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Forgot password</h2>
            <p class="text-muted mb-4">Enter your email address to reset your password.</p>
            <div class="mb-3">
                <label asp-for="Email" class="form-label required">Email address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-footer">
                <button type="submit" class="btn btn-primary w-100">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"/><path d="M3 7l9 6l9 -6"/>
                    </svg>
                    Submit
                </button>
            </div>
        </div>
    </form>
    <div class="text-center text-muted mt-3">
        Forget it, <a asp-controller="Account" asp-action="Login">send me back</a> to the login screen.
    </div>
</div>

@section Scripts {
    <partial name="_AuthPageJsInjectorPartial"/>
}