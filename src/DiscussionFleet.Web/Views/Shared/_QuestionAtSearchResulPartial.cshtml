@using Microsoft.AspNetCore.Mvc.TagHelpers
@model QuestionAtSearchResultViewModel;

<div class="row row-cards py-2">
    <div class="space-y">
        <div class="card">
            <div class="row g-0">
                <div class="col-12 col-md-auto">
                    <div class="card-body pt-2 pb-1 py-md-3">
                        <partial name="_QuestionStatsPartial" model="Model.Stats"/>
                    </div>
                </div>
                <div class="col-12 col-md">
                    <div class="card-body py-0 pb-3 pt-md-2">
                        <div class="row">
                            <div class="col">
                                <h3 class="mb-0">
                                    <a href="@Model.Title.Value">@Model.Title.Key</a>
                                </h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <p class="mb-0 text-dark">
                                    @Model.Body
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="mt-3 list-inline  mb-0 text-muted">
                                    <div class="list-inline-item">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                             fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round"
                                             stroke-linejoin="round"
                                             class="icon icon-tabler icons-tabler-outline icon-tabler-user-circle">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"/>
                                            <path d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"/>
                                            <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855"/>
                                        </svg>

                                        <a href="@Model.Author.Value">@Model.Author.Key</a>
                                    </div>
                                    <div class="list-inline-item">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                             fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round"
                                             stroke-linejoin="round"
                                             class="icon icon-tabler icons-tabler-outline icon-tabler-calendar-clock">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M10.5 21h-4.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v3"/>
                                            <path d="M16 3v4"/>
                                            <path d="M8 3v4"/>
                                            <path d="M4 11h10"/>
                                            <path d="M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"/>
                                            <path d="M18 16.5v1.5l.5 .5"/>
                                        </svg>
                                        @Model.LastActivity
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-auto">
                                <div class="mt-3 badges">


                                    @for (var i = 0; i <= 3; i++)
                                    {
                                        var tag = Model.Tags.ElementAt(i);
                                        <a href="@tag.Value" class="badge badge-outline text-muted border fw-normal badge-pill">@tag.Key</a>
                                    }


                                    @if (Model.Tags.Count > 3)
                                    {
                                        var extraTagsCount = Model.Tags.Count - 3;
                                        <span class="badge badge-outline text-muted border fw-normal badge-pill">@extraTagsCount </span>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>