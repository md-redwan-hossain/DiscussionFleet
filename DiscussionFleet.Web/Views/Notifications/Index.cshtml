@using DiscussionFleet.Domain.Entities.ResourceNotificationAggregate.Utils
@using DiscussionFleet.Domain.Utils
@using Microsoft.AspNetCore.Mvc.TagHelpers;
@model DiscussionFleet.Web.Models.Others.NotificationViewModel


@{
    ViewData["Title"] = "Notifications";
}


<div class="page-wrapper">
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 d-flex align-items-center justify-content-between">
                <div class="col-auto">
                    <button class="btn btn-primary d-md-none" id="filter-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-adjustments-horizontal">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M14 6m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"/>
                            <path d="M4 6l8 0"/>
                            <path d="M16 6l4 0"/>
                            <path d="M8 12m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"/>
                            <path d="M4 12l2 0"/>
                            <path d="M10 12l10 0"/>
                            <path d="M17 18m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"/>
                            <path d="M4 18l11 0"/>
                            <path d="M19 18l1 0"/>
                        </svg>
                        Filter
                    </button>
                </div>
                <div class="col-auto">
                    <a asp-controller="Account" asp-action="Profile" class="btn btn-primary">
                        Profile
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="page-body">
        <div class="container-xl">
            <div class="row g-4">
                <div class="col-md-3 d-none d-md-block" id="filter-area">
                    <form asp-controller="Notifications" method="get" asp-action="Index" autocomplete="off">

                        <div class="form-label">Sort by</div>
                        <div class="mb-4">
                            <label class="form-check">
                                <input asp-for="SortBy" type="radio" class="form-check-input" value="@NotificationSortCriteria.Newest" checked>
                                <span class="form-check-label">Newest</span>
                            </label>
                            <label class="form-check">
                                <input asp-for="SortBy" type="radio" class="form-check-input" value="@NotificationSortCriteria.Oldest">
                                <span class="form-check-label">Oldest</span>
                            </label>
                        </div>


                        <div class="form-label">Sort Order</div>
                        <div class="mb-4">
                            <label asp-for="SortOrder" class="form-check form-check-inline">
                                <input asp-for="SortOrder" class="form-check-input" type="radio" value="@DataSortOrder.Asc" checked>
                                <span class="form-check-label">Asc</span>
                            </label>
                            <label asp-for="SortOrder" class="form-check form-check-inline">
                                <input asp-for="SortOrder" class="form-check-input" type="radio" value="@DataSortOrder.Desc">
                                <span class="form-check-label">Desc</span>
                            </label>
                        </div>


                        <label class="form-label">Data Per Page</label>
                        <div class="mb-4">
                            <div class="btn-group w-100" role="group">
                                <input type="radio" asp-for="@Model.DataPerPage" value="15" class="btn-check" id="btn-radio-basic-1"
                                       autocomplete="off" checked>
                                <label for="btn-radio-basic-1" type="button" class="btn">15</label>
                                <input type="radio" asp-for="@Model.DataPerPage" value="30" class="btn-check" id="btn-radio-basic-2"
                                       autocomplete="off">
                                <label for="btn-radio-basic-2" type="button" class="btn">30</label>
                                <input type="radio" asp-for="@Model.DataPerPage" value="50" class="btn-check" id="btn-radio-basic-3"
                                       autocomplete="off">
                                <label for="btn-radio-basic-3" type="button" class="btn">50</label>
                            </div>
                        </div>

                        <div class="mt-5">
                            <button type="submit" class="btn btn-primary w-100">Apply</button>
                        </div>
                    </form>
                </div>

                <div class="col-md-9">

                    @foreach (var notification in Model.Data)
                    {
                        <div class="row row-cards py-2">
                            <div class="space-y">
                                <div class="card">
                                    <div class="row g-0">
                                        <div class="col-12 col-md">
                                            <div class="card-body py-0 pb-3 pt-md-2">
                                                <div class="row pt-2">
                                                    <div class="col">

                                                        <a asp-controller="Questions" asp-action="Details" asp-route-id="@notification.QuestionId"
                                                           class="mb-0 text-dark">
                                                            @notification.Title
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col">
                                                        <div class="mt-3 list-inline  mb-0 text-muted">
                                                            <div class="list-inline-item">
                                                                <span class="badge bg-blue">@notification.NotificationType.ToString()</span>
                                                            </div>
                                                            <div class="list-inline-item">

                                                                <div class="badge badge-outline text-muted border fw-normal badge-pill">

                                                                    @{
                                                                        var dateTime = notification.UpdatedAtUtc ?? notification.CreatedAtUtc;
                                                                    }

                                                                    <span class="text-dark fs-6 utc-datetime"
                                                                          data-time="@dateTime.ToString("o")">
                                                                    </span>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.Pagination.TotalItems is not 0)
                    {
                        <div class="d-flex mt-4">
                            <ul class="pagination ms-auto">

                                @for (var i = Model.Pagination.StartPage; i <= Model.Pagination.EndPage; i++)
                                {
                                    <li class="@(i == Model.Pagination.CurrentPage ? "page-item active" : "page-item")">
                                        <a class="page-link" href="@Url.Action("Index", "Notifications", new { CurrentPage = i, DataPerPage = Model.DataPerPage })">@i</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_FooterPartial"/>

@section Scripts
{
    <script>
            window.onload = function() {
                const lastActivityDivs = document.getElementsByClassName('utc-datetime');
                for (let i = 0; i < lastActivityDivs.length; i++) {
                    const utcDateTime = lastActivityDivs[i].getAttribute('data-time');
                    const date = new Date(utcDateTime);
                    const localDate = new Date(date.getTime() - date.getTimezoneOffset() * 60000);
                    const options = { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit', hour12: true };
                    lastActivityDivs[i].textContent = localDate.toLocaleString(undefined, options);
                }
            };
    </script>
}